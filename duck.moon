t=0
x=96
y=24
q={}
p={
 x: 0
 y: 0
 tic: 1
 elapsed: 0
 state: 1
 flip: 0
 states: {
  {
   w: 2
   h: 2
   frames: { 272 }
  },
  {
   w: 2
   h: 2
   frames: { 304, 306, 308, 304, 306, 308 }
  },
  {
   w: 3
   h: 2
   frames: { 336 }
  }
 }
}

update = (t) ->
 p.state = 1
 p.elapsed += 1
 if p.elapsed > 10
  p.elapsed = 0
  p.tic += 1
  if p.tic > 6
   p.tic = 1

 if btn(4)
  p.state = 3
 if btn(0)
  p.y -= 1
  p.state = 2
 if btn(1)
  p.y += 1
  p.state = 2
 if btn(2)
  p.x -= 1
  p.state = 2
  p.flip = 1
 if btn(3)
  p.x += 1
  p.state = 2
  p.flip = 0

draw = (t) ->
 cls(2)
 print("t: #{t}",1,1)
 print("p.tic: #{p.tic}",1,8)

 sdata = p.states[p.state]
 frame = 1
 if p.tic > #sdata.frames
  frame = sdata.frames[#sdata.frames]
 else
  frame = sdata.frames[p.tic]

 print("frames: #{#sdata.frames}",1,16)
 print("frame: #{frame}",1,24)
 spr(frame,p.x,p.y,0,1,p.flip,0,sdata.w,sdata.h)

export TIC = ->
 update(t)
 draw(t)
 t += 1

